<div class="col-md-3">
  <h2>User info</h2>
  <% if user.profile_image.attached? %>
    <%= image_tag user.profile_image %>
  <% else %>
    <%= image_tag 'no_image' %>
  <% end %>
  <table class="table">
    <tr>
      <th>name</th>
      <th><%= user.name %></th>
    </tr>
    <tr>
      <th>introduction</th>
      <th><%= user.body %></th>
    </tr>
  </table>
  <div class="row">
    <% if user == current_user %>
      <a class="btn btn-outline-secondary btn-block" href="<%= edit_user_path(current_user) %>">
        <i class="fas fa-user-cog"></i>
      </a>
    <% else %>
      <a class="btn btn-outline-secondary btn-block" href="<%= user_path(user) %>">
        <i class="fas fa-user-cog"></i>
      </a>
    <% end %>
  </div>
  
  <h2 class="mt-3">New Book</h2>
  <%= form_with model: book_new do |f| %>
    <div class="form-group">
      <h4>Title</h4>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <h4>Opinion</h4>
      <%= f.text_area :body %>
    </div>
    <div class="btn btn-success">
      <%= f.submit 'Create Book' %>
    </div>
  <% end %>
</div>
