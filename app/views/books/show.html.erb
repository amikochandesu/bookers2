<div>
  <%= flash[:notice] %>
</div>

<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
  <%= render 'new', book_new: @book_new, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">
        <tbody>
          <tr>
            <td>      
            <% if @user.profile_image.attached? %>
              <%= image_tag @user.profile_image %>
            <% else %>
              <%= image_tag @user.get_profile_image %>
            <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book) %>
            </td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td class="btn btn-sm btn-success "><%= link_to "Edit", edit_book_path(@book) %></td>
              <td class="btn btn-sm btn-danger"><%= link_to "Destroy", book_path(@book), method: :delete, deta: { confirm: "本当に消しますか？" } %></td>
            <% end %>
          </tr>
          <tr>
            <td>
              <%= link_to @book.user.name, user_path(@user) %>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>

