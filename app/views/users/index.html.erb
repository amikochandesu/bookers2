<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
  <%= render 'books/new', book_new: @book_new, user: current_user %>
    <div class="col-md-8 offset-md-1">
      <h2>Users</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td>      
            <% if current_user.profile_image.attached? %>
              <%= image_tag current_user.profile_image %>
            <% else %>
              <%= image_tag current_user.get_profile_image %>
            <% end %>
            </td>
            <td>
              <%= user.name %>
            </td>
            <td><%= link_to "Show", user_path(user) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
