<div>
  <%= flash[:notice] %>
</div>

<p id="notice"></p>

<div class="container px-5 px-sm-0">
  <div class="row">
    <%= render 'books/new', book_new: @book_new, user: @user %>
    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>      
            <% if book.user.profile_image.attached? %>
              <%= image_tag book.user.profile_image %>
            <% else %>
              <%= image_tag book.user.get_profile_image %>
            <% end %>
            </td>
            <td>
              <%= link_to book.title, book_path(book) %>
            </td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>