<p id="notice"></p>

<% if @user.errors.any? %>
  <%= @user.errors.count %>errors prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User info</h1>
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for ="inputName">Name</label></br>
        <%= f.text_field :name, autofucus: true, id:"inputName", placeholder:"Name" %>
      </div>
      <div class="form-group">
        <label for="inputImage">Image</label>
        <%= f.file_field :profile_image, placeholder: "Image", accept: "image/*" %>
      </div>
      <div class="form-group">
        <label for ="inputBody">Introduction</label></br>
        <%= f.text_area :body, autofucus: true, id:"inputBody", placeholder:"Body" %>
      </div>
      <div class="form-group">
        <p class="btn btn-success">
        <%= f.submit "Update User" %>
        </p>
      </div>
      <% end %>
    </div>
  </div>
</div>